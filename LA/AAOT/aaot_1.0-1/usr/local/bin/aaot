#!/usr/bin/env python3
"""
AAOT - Advanced OSINT Tool
Debian package main executable
"""

import sys
import os

# Add package installation path to Python path
package_path = '/usr/share/aaot'
if package_path not in sys.path:
    sys.path.insert(0, package_path)

try:
    from aaot import main
except ImportError as e:
    print(f"Error: Failed to import AAOT modules: {e}")
    print("Make sure the package is properly installed.")
    sys.exit(1)

if __name__ == "__main__":
    # Set the config path to /etc/aaot
    os.environ['AAOT_CONFIG_PATH'] = '/etc/aaot'
    main()
